# Frontend Environment Variables Example
# Copy this file to .env and adjust values as needed

# ============================================
# BACKEND URLs
# ============================================
# URL base del backend (para API calls)
VITE_BACKEND_URL=http://localhost:3000

# URL para WebSocket (puede ser diferente del BACKEND_URL en algunos casos)
VITE_WEBSOCKET_URL=http://localhost:3000

# ============================================
# API Configuration
# ============================================
VITE_API_URL=http://localhost:3000/api/v1
VITE_API_PREFIX=/api/v1

# ============================================
# Application Info
# ============================================
VITE_APP_NAME=LearnMind AI
VITE_APP_VERSION=2.1.0

# ============================================
# Feature Flags
# ============================================
VITE_FEATURE_OCR_ENABLED=true
VITE_FEATURE_SUMMARIZE_ENABLED=true
VITE_FEATURE_MINDMAP_ENABLED=true
VITE_FEATURE_CONCEPTMAP_ENABLED=true
VITE_FEATURE_TRANSLATE_ENABLED=true
VITE_FEATURE_TTS_ENABLED=false
VITE_FEATURE_GROUPS_ENABLED=true
VITE_FEATURE_PAYMENTS_ENABLED=false

# ============================================
# Environment Detection
# ============================================
# VITE_ENV_MODE will be automatically set by Vite based on the command
# For development: npm run dev
# For production: npm run build
