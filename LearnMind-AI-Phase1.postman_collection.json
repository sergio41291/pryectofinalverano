{
  "info": {
    "name": "LearnMind AI - Phase 1 API",
    "description": "Complete API testing collection for Phase 1\n\nFlow:\n1. Register user\n2. Login (get token)\n3. Upload file\n4. Trigger OCR\n5. Get OCR result\n6. List OCR results",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "health"
          ]
        },
        "description": "Verify API is running"
      },
      "response": []
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Has token\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.accessToken).to.exist;",
                  "    pm.environment.set(\"accessToken\", jsonData.accessToken);",
                  "    pm.environment.set(\"userId\", jsonData.user.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test{{$timestamp}}@learmmind.ai\",\n  \"password\": \"Test123!Secure\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            },
            "description": "Register new user"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Has token and userId\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.accessToken).to.exist;",
                  "    pm.environment.set(\"accessToken\", jsonData.accessToken);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@learmmind.ai\",\n  \"password\": \"Test123!Secure\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "description": "Login with credentials"
          },
          "response": []
        },
        {
          "name": "Get Profile",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Has user data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.id).to.exist;",
                  "    pm.expect(jsonData.email).to.exist;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "users",
                "profile"
              ]
            },
            "description": "Get current user profile"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Uploads",
      "item": [
        {
          "name": "Upload File",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Has upload ID\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.id).to.exist;",
                  "    pm.environment.set(\"uploadId\", jsonData.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                },
                {
                  "key": "description",
                  "value": "Test document for OCR"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/uploads",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "uploads"
              ]
            },
            "description": "Upload a file (PDF, Image, or Audio)"
          },
          "response": []
        },
        {
          "name": "List Uploads",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Has data array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/uploads?page=1&limit=10",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "uploads"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "List user's uploaded files"
          },
          "response": []
        },
        {
          "name": "Get Upload",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/uploads/{{uploadId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "uploads",
                "{{uploadId}}"
              ]
            },
            "description": "Get specific upload details"
          },
          "response": []
        }
      ]
    },
    {
      "name": "OCR",
      "item": [
        {
          "name": "Process OCR",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Has job ID\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.jobId).to.exist;",
                  "    pm.expect(jsonData.status).to.equal('pending');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"language\": \"es\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/ocr/{{uploadId}}/process",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "ocr",
                "{{uploadId}}",
                "process"
              ]
            },
            "description": "Trigger OCR processing for an upload"
          },
          "response": []
        },
        {
          "name": "Get OCR Result",
          "event": [
            {
              "listen": "test",
              "script": [
                "pm.test(\"Status is 200\", function () {",
                "    pm.response.to.have.status(200);",
                "});",
                "",
                "pm.test(\"Has result data\", function () {",
                "    var jsonData = pm.response.json();",
                "    pm.expect(jsonData.id).to.exist;",
                "    pm.expect(jsonData.status).to.exist;",
                "    if (jsonData.status === 'completed') {",
                "        pm.expect(jsonData.extractedText).to.exist;",
                "    }",
                "});"
              ]
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/ocr/{{uploadId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "ocr",
                "{{uploadId}}"
              ]
            },
            "description": "Get OCR result for an upload (wait for processing)"
          },
          "response": []
        },
        {
          "name": "List OCR Results",
          "event": [
            {
              "listen": "test",
              "script": [
                "pm.test(\"Status is 200\", function () {",
                "    pm.response.to.have.status(200);",
                "});",
                "",
                "pm.test(\"Has data array\", function () {",
                "    var jsonData = pm.response.json();",
                "    pm.expect(jsonData.data).to.be.an('array');",
                "    pm.expect(jsonData.total).to.exist;",
                "});"
              ]
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/ocr?page=1&limit=10",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "ocr"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "List all OCR results"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "uploadId",
      "value": "",
      "type": "string"
    }
  ]
}
